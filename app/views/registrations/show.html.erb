<div class ="room_details">
<p id="notice"><%= notice %></p>

<p>
  <strong>ルーム名:</strong>
  <%= @registration.name %>
</p>

<p>
  <strong>ルーム紹介:</strong>
  <%= @registration.introduction %>
</p>

<p>
  <strong>料金:</strong>
  <%= @registration.price %>
</p>

<p>
  <strong>住所:</strong>
  <%= @registration.address %>
</p>

<p class = "room_img">
  <strong class = "room_title">ルーム画像:</strong>
  <% if @registration.image.attached? %>
  <%= image_tag @registration.image %>
  <% end %>
</p>


<%= link_to '編集する', edit_registration_path(@registration) %>
<%= link_to '戻る', registrations_path %>

</div>